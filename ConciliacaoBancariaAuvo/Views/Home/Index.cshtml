@{
    ViewData["Title"] = "Conciliação Bancária";
}
@model ConciliacaoBancariaAuvo.Entities.Extrato

<section class="my-2">
    <div class="row justify-content-center">
        <div class="col-md-12 ">
            <div class="">

                <form class="col-xs-12" method="post" enctype="multipart/form-data" asp-action="Create">

                    <div class="card bg-transparent border-white" style="width:100%;">
                        <div class="card-body">
                            <div class="card-text text-center mb-2"><img src="~/images/cloud.svg" alt="Upload" style="width:10%;" /></div>
                            <div class="row justify-content-center">
                                <div class="col-md-12">
                                    <h5 class="text-white text-center">Escolha o arquivo OFX</h5>
                                </div>
                                <div class="col-md-6">
                                    <input type="file" id="OfxUpload" multiple accept="application/ofx" class="btn btn-light txt-color-main form-control-file" asp-for="OfxUpload" />
                                    <label class="text-light" style="display: none" id="ofx-nome"></label>
                                </div>
                                <div class="form-group ">
                                    <button type="submit" class="btn btn-light">Importar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<section class="bg-white">
    <div class="container">
        <h3 class="text-center p-4 txt-color-main">
            Listagem da Conciliação Bancária
        </h3>
        <div style="overflow-x:auto;">
            <table class="table shadow p-3 rounded">
                <thead class="table-light bg-light rounded txt-color-main">
                    <tr>
                        <th>
                            @Html.DisplayName("Data")
                        </th>
                        <th>
                            @Html.DisplayName("Tipo")
                        </th>
                        <th>
                            @Html.DisplayName("Valor")
                        </th>
                        <th>
                            @Html.DisplayName("Descrição")
                        </th>
                        <th>
                            @Html.DisplayName("Observação")
                        </th>
                        <th>
                            @Html.DisplayName("")
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-light">
                    <tr>
                        <td>
                            10/01/2021
                        </td>
                        <td>
                            Crédito
                        </td>
                        <td>
                            -200,00
                        </td>
                        <td>
                            RSHOP-LEITERIA MI-11/02
                        </td>
                        <td>
                            Lorem Ipsum dolor sit...
                        </td>
                        <td>
                            <button type="button" class="btn btn-light btn-main text-white" data-toggle="modal" data-target="#ModalDetalhes">Detalhes</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>

<!-- Modal -->
<div class="modal fade" id="ModalDetalhes" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center txt-color-main" id="exampleModalLabel">Detalhes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label>
                    Observação
                </label>
                <textarea cols="40" rows="5" class="form-control"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-light btn-main text-white">Salvar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}