@model X.PagedList.PagedList<ConciliacaoBancariaAuvo.Entities.Extrato>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Conciliação Bancária";
}

<section class="my-2">
    <div class="row justify-content-center">
        <div class="col-md-12 ">
            <div class="">

                <form class="col-xs-12" method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UploadArquivo">

                    <div class="card bg-transparent border-white" style="width:100%;">
                        <div class="card-body">
                            <div class="card-text text-center mb-2"><img src="~/images/cloud.svg" alt="Upload" style="width:10%;" /></div>
                            <div class="row justify-content-center">
                                <div class="col-md-12">
                                    <h5 class="text-white text-center">Escolha o arquivo OFX</h5>
                                </div>
                                <div class="col-md-6">

                                    <input type="file" id="arquivo" name="arquivo" multiple accept="application/ofx" class="btn btn-light txt-color-main form-control-file" />

                                    <label class="text-light" style="display: none" id="ofx-nome"></label>

                                </div>
                                <div class="form-group ">
                                    <button type="submit" class="btn btn-light">Importar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>

<form class="mt-1" asp-action="index" asp-controller="home" method="get">
    <div class="col-md-12">
        <div class="row">

            <div class="input-group">
                <input type="search" name="search" value="@ViewBag.Search" placeholder="Pesquise por Descrição ou Tipo..." class="form-control" required/>
                <button type="submit" name="name" value="" class="btn btn-success">Pesquisar</button>
            </div>
            <div class="mb-3 mt-1">
                <a class="align-self-center mt-1 text-white" asp-action="Index">Limpar pesquisa</a>
            </div>
        </div>
    </div>
</form>

<section class="bg-white">
    <div class="container">
        <h3 class="text-center p-4 txt-color-main">
            Listagem da Conciliação Bancária
        </h3>
        <div style="overflow-x:auto;">
            <table class="table shadow p-3 rounded">
                <thead class="table-light bg-light rounded txt-color-main">
                    <tr>
                        <th>
                            @Html.DisplayName("Data")
                        </th>
                        <th>
                            @Html.DisplayName("Tipo")
                        </th>
                        <th>
                            @Html.DisplayName("Valor")
                        </th>
                        <th>
                            @Html.DisplayName("Descrição")
                        </th>
                        <th>
                            @Html.DisplayName("Observação")
                        </th>
                        <th>
                            @Html.DisplayName("")
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-light">
                    @if (Model == null)
                    {
                        <span class="alert-danger">Sem Registros</span>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelitem => item.DataLancamento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.Tipo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.Valor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.Observacao)
                                </td>
                                <td>
                                    <button type="button" class="btn btn-light btn-main text-white" asp-action="details" asp-route-id="@item.Id" data-toggle="modal" data-target="#modaldetalhes">detalhes</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<!-- Modal -->
<div class="modal fade" id="ModalDetalhes" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center txt-color-main" id="exampleModalLabel">Detalhes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <textarea cols="40" rows="5" class="form-control"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-light btn-main text-white">Salvar</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 text-white align-self-center">
        Listando registros de @Model.FirstItemOnPage
        a @Model.LastItemOnPage de um total de @Model.TotalItemCount
    </div>
    <div class="col-md-6 text-right">
        @Html.PagedListPager(Model,
          page => Url.Action("Index", new { page }))
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}